<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomEditTextStylable">
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="animatedTextSize" format="dimension" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

    <!--    OntuTabLayout -->
    <declare-styleable name="OntuTabLayout">
        <attr name="IndicatorHeight" format="dimension" />
        <attr name="IndicatorColor" format="color" />
        <attr name="CenterAlign" format="boolean" />
        <attr name="AnimatedIndicator" format="enum">
            <enum name="lineMove" value="0" />
        </attr>
    </declare-styleable>
</resources>